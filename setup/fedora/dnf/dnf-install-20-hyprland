#!/bin/bash


# Kitty Terminal
dnf install kitty


# Ghostty Terminal
dnf copr enable pgdev/ghostty

dnf install ghostty


# Hyprland
dnf copr enable solopasha/hyprland

dnf install hyprland hyprland-devel hypridle hyprlock hyprpaper hyprnome hyprpolkitagent xdg-desktop-portal-hyprland xdg-desktop-portal-gtk rofi waybar wlogout


# Browser
dnf install qutebrowser


# Utils
dnf install network-manager-applet blueman

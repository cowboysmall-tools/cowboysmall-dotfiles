#!/bin/bash


dnf group install development-tools
dnf group install c-development


# C / C++
dnf install clang clang-devel cmake CUnit CUnit-devel check check-devel


# LaTex
dnf install texlive-scheme-basic texlive-chktex latexmk zathura zathura-plugins-all


# Rust
dnf install rustup


# Go
dnf install golang hugo


# Zig
dnf install zig


# Lua
dnf install lua


# Julia
dnf install julia


# GTK4
dnf install gtk4 gtk4-devel


# Graphene
dnf install graphene graphene-devel

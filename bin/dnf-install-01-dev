#!/bin/bash


dnf group install development-tools
dnf group install c-development


# Python
dnf install python3-numpy python3-pandas python3-matplotlib python3-scipy python3-sympy python3-ipython python3-notebook
dnf install python3-seaborn python3-plotly
dnf install python3-statsmodels python3-yfinance
dnf install python3-scikit-learn
dnf install python3-fabric
dnf install python3-flask+async
dnf install python3-lsp-server python3-pycodestyle python3-pyasyncore python3-pyasynchat
dnf install hatch


# R
dnf copr enable iucar/cran

dnf install R
dnf install R-CoprManager
dnf install R-CRAN-plyr R-CRAN-dplyr R-CRAN-readr R-CRAN-data.table R-CRAN-reshape2 R-CRAN-tidyr R-CRAN-car R-CRAN-e1071 R-CRAN-ggplot2 R-CRAN-plotly R-CRAN-languageserver


# Rust
dnf install rust cargo
dnf install clippy
dnf install rust-src rustfmt


# Go
dnf install golang hugo


# Julia
dnf install julia


# Octave (Matlab clone)
dnf install octave


# LaTex
dnf install texlive-scheme-basic latexmk zathura

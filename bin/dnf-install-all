# dnf install nm-applet

dnf swap ffmpeg-free ffmpeg --allowerasing

dnf install gnome-tweaks gnome-extensions-app gnome-shell-extension-appindicator gnome-shell-extension-blur-my-shell gnome-shell-extension-just-perfection
dnf install figlet fortune-mod fastfetch stow lshw htop btop zsh
dnf install tmux screen rtorrent neovim
dnf install mpd mpdris2 ncmpcpp cava

dnf install rpmconf remove-retired-packages clean-rpm-gpg-pubkey symlinks dracut-config-rescue

dnf config-manager addrepo --from-repofile=https://download.sublimetext.com/rpm/stable/x86_64/sublime-text.repo
dnf install sublime-text

dnf install obs-studio obs-studio-plugin-vaapi obs-studio-plugin-vkcapture obs-studio-plugin-vlc-video obs-studio-plugin-webkitgtk obs-studio-plugin-x264
dnf install inkscape gimp vlc lollypop octave megasync gnome-screenshot
dnf install adw-gtk3-theme gnome-themes-extra

# dnf config-manager addrepo --from-repofile=https://download.docker.com/linux/fedora/docker-ce.repo
# dnf install docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin
dnf install texlive-scheme-basic
dnf install latexmk zathura

dnf install python3-numpy python3-scipy python3-matplotlib python3-pandas python3-scikit-learn python3-fabric python3-pycodestyle python3-ipython python3-notebook python3-statsmodels
dnf install python3-seaborn python3-plotly python3-lsp-server python3-yfinance python3-pyasyncore python3-pyasynchat python3-sympy python3-flask+async 
# dnf install python3-pyright
# dnf install python3-torch python3-torchvision python3-torchaudio
dnf install hatch

dnf copr enable iucar/cran
dnf install R R-CoprManager R-CRAN-plyr R-CRAN-dplyr R-CRAN-readr R-CRAN-data.table R-CRAN-reshape2 R-CRAN-tidyr R-CRAN-car R-CRAN-e1071 R-CRAN-ggplot2 R-CRAN-plotly R-CRAN-languageserver 
